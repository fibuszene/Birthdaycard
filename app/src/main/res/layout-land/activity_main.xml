<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="at.fibuszene.birthdaycard.MainActivity">

    <ImageView
        android:id="@+id/mountainImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/card_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/nordkette" />


    <TextView
        android:id="@+id/visit"
        style="@style/LargeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/medium_padding"
        android:text="@string/greetings_from" />

    <RelativeLayout
        android:id="@+id/fromLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/medium_padding">

        <TextView
            android:id="@+id/fromTxtView"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/fromNameTxtView"
            android:layout_toStartOf="@+id/fromNameTxtView"
            android:paddingEnd="@dimen/std_padding"
            android:paddingRight="@dimen/std_padding"
            android:text="@string/from"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/fromNameTxtView"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/from_name"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>
